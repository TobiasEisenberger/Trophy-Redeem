<UserControl x:Class="Trophy_Redeem.src.model.InGameOverlay"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Trophy_Redeem.src.model"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Name="healthBar">
        <Grid.RowDefinitions>
            <RowDefinition Height="1*" />
            <RowDefinition Height="7*" />
        </Grid.RowDefinitions>
        <Image x:Name="Heart1" Source="/src/assets/pngs/UI/heart.png" Width="50" Height="50" Margin="10,20,0,0" VerticalAlignment="Top" HorizontalAlignment="Left"/>
        <Image x:Name="Heart2" Source="/src/assets/pngs/UI/heart.png" Width="50" Height="50" Margin="60,20,0,0" VerticalAlignment="Top" HorizontalAlignment="Left"/>
        <Image x:Name="Heart3" Source="/src/assets/pngs/UI/heart.png" Width="50" Height="50" Margin="110,20,0,0" VerticalAlignment="Top" HorizontalAlignment="Left"/>
    </Grid>
</UserControl>
