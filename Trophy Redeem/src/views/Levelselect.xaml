<UserControl x:Class="Trophy_Redeem.Levelselect"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Trophy_Redeem"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <Viewbox Stretch="Fill">
        <Grid>
            <Grid.Background>
                <ImageBrush ImageSource="/src/assets/pngs/UI/LevelSelect.png"/>
            </Grid.Background>
            <Button x:Name="level1_btn"  Margin="158,162,1401,415" Content="Level 1" Click="level1_btn_Click" FontFamily="Castellar" FontSize="20" BorderThickness="0" Cursor="Hand">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Ellipse Fill="Green"/>
                    </ControlTemplate>
                </Button.Template>
            </Button>

            <Button x:Name="level2_btn" Background="Red" Height="30" Width="68"  Margin="-160, 465, -25 ,110" Content="Levle 2" Click="level2_btn_Click" FontFamily="Castellar" FontSize="20" BorderThickness="0" Cursor="Hand" IsEnabled="False">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Ellipse Fill="{TemplateBinding Background}"/>
                    </ControlTemplate>
                </Button.Template>
            </Button>
            <Button x:Name="level3_btn" Background="Red" Height="30" Width="68"  Margin="1436,216,120,359" Content="Level 3" Click="level3_btn_Click" FontFamily="Castellar" FontSize="20" BorderThickness="0" RenderTransformOrigin="-1.149,14.681" Cursor="Hand" IsEnabled="False">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Ellipse Fill="{TemplateBinding Background}"/>
                    </ControlTemplate>
                </Button.Template>
            </Button>
        </Grid>
    </Viewbox>
</UserControl>
