<UserControl x:Class="Trophy_Redeem.PauseMenu"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Trophy_Redeem"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="/src/assets/pngs/UI/Background.png"/>
        </Grid.Background>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="3*" />
            <ColumnDefinition Width="4*" />
            <ColumnDefinition Width="3*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*" />
            <RowDefinition Height="4*" />
            <RowDefinition Height="1*" />
        </Grid.RowDefinitions>
        <StackPanel Grid.Column="1" Grid.Row="1">
            <Image Source="/src/assets/pngs/UI/TT.png"/>
            <Button x:Name="resume_btn" Height="70" Margin="0, 50, 0 ,20" Content="Resume Game" Click="resume_btn_Click" FontFamily="Castellar" FontSize="20" BorderThickness="0">
                <Button.Background>
                    <ImageBrush ImageSource="/src/assets/pngs/UI/panel_Example1.png" Stretch="Fill">
                    </ImageBrush>
                </Button.Background>
            </Button>
            <Button x:Name="save_btn" Height="70" Margin="0, 0, 0 ,20" Content="Save Game" Click="save_btn_Click" FontFamily="Castellar" FontSize="20" BorderThickness="0">
                <Button.Background>
                    <ImageBrush ImageSource="/src/assets/pngs/UI/panel_Example1.png"/>
                </Button.Background>
            </Button>
            <Button x:Name="Back_btn" Height="70" Margin="0, 0, 0 ,20" Content="Back to Main Menu" Click="back_btn_Click" FontFamily="Castellar" FontSize="20" BorderThickness="0">
                <Button.Background>
                    <ImageBrush ImageSource="/src/assets/pngs/UI/panel_Example1.png"/>
                </Button.Background>
            </Button>
            <Button x:Name="exit_btn" Height="70" Margin="0, 0, 0 ,20" Content="Exit Game" Click="exit_btn_Click" FontFamily="Castellar" FontSize="20" BorderThickness="0">
                <Button.Background>
                    <ImageBrush ImageSource="/src/assets/pngs/UI/panel_Example1.png"/>
                </Button.Background>
            </Button>
        </StackPanel>
        
    </Grid>
</UserControl>
